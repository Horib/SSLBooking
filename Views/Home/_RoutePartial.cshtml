@model Route

@{
    Layout = null;
}

<div class="flex w-full truncate whitespace-nowrap justify-start items-center space-x-4 mt-0">
    <span class="mt-0">
        <span class="inline-flex flex-shrink-0 items-center bg-sky-100 text-sky-500 rounded-lg pl-2 pr-2 pt-2 pb-2">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="h-5 w-5">
                <path d="M8 5a1 1 0 100 2h5.586l-1.293 1.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L13.586 5H8zM12 15a1 1 0 100-2H6.414l1.293-1.293a1 1 0 10-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L6.414 15H12z"></path>
            </svg>
        </span>
    </span>
    <div class="w-full max-w-none text-left truncate whitespace-nowrap mt-0">
        <div class="flex truncate whitespace-nowrap mt-0 text-left text-gray-500 text-sm font-normal dark:text-white">
            <span class="w-6 text-center text-inherit text-sm font-bold">@Model.RouteNumber</span>
            <div class="h-auto mx-2 bg-gray-300 w-0.5 rounded-full"></div>
            <span class="text-inherit text-sm font-semibold">@Model.Name</span>
        </div>
        @* <p class="truncate whitespace-nowrap mt-0 text-left text-gray-500 text-sm font-normal">7 transactions</p> *@
    </div>
    <p class="shrink-0 mt-0 text-left text-gray-500 text-sm font-normal dark:text-white">DKK @Model.Price</p>
</div>
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>SSL Booking</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico">
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body class="flex flex-col min-h-screen p-5 bg-white dark:bg-blue-200">
<header>
    <nav class="bg-white border-gray-200 px-2 sm:px-4 py-2.5 rounded dark:bg-gray-900">
        <div class="container flex flex-wrap justify-between items-center mx-auto">
            <a href="/" class="flex items-center">
                <img src="~/assets/ssllogo.svg" class="mr-3 h-6 sm:h-9" alt="SSL Logo"/>
                <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">SSL Booking</span>
            </a>
            <div class="w-full block w-auto" id="navbar-default">
                <ul class="flex flex-row p-4 mt-0 rounded-lg border border-gray-100 space-x-4 text-sm font-medium border-0 bg-white dark:bg-gray-900 dark:border-gray-700">
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                           class="block py-2 pr-4 pl-3 text-white rounded bg-transparent text-blue-700 p-0 dark:text-white">
                            Home
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Booking" asp-action="Index"
                           class="block py-2 pr-4 pl-3 text-gray-700 rounded hover:bg-transparent border-0 hover:text-blue-700 p-0 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">
                            Book Passage
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Routes"
                           class="block py-2 pr-4 pl-3 text-gray-700 rounded hover:bg-transparent border-0 hover:text-blue-700 p-0 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">
                            Create Route
                        </a>
                    </li>
                </ul>
            </div>
            <button id="light-btn" class="dark:text-white">Light</button>
            <button id="dark-btn" class="dark:text-white">Dark</button>
        </div>
    </nav>
</header>
<div class="container flex flex-wrap justify-between items-center mx-auto">
    <main role="main" class="w-full">
        @RenderBody()
    </main>
</div>
<footer class="p-4 bg-white rounded-lg shadow max-w-7xl w-full mx-auto mt-auto md:flex md:items-center md:justify-between md:p-6 dark:bg-gray-800">
    <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">
        © 2022 <a asp-area="" asp-controller="Home" asp-action="Index">SSL Booking</a>. All Rights Reserved.
    </span>
    <ul class="flex flex-wrap items-center mt-3 text-sm text-gray-500 dark:text-gray-400 sm:mt-0">
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="mr-4 hover:underline md:mr-6 ">Home</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Booking" asp-action="Index" class="mr-4 hover:underline md:mr-6 ">Book Passage</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Routes" asp-action="Index" class="mr-4 hover:underline md:mr-6 ">Create Route</a>
        </li>
        <li>
            <a href="https://github.com/" target="_blank" class="hover:underline">Github Repo</a>
        </li>
    </ul>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
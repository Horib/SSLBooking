@model RouteViewModel

@{
    Layout = "_SimpleLayout";
}

<div class="flex w-full gap-6">
    <div class="flex flex-col gap-4 w-2/12 dark:text-gray-400">
        <div class="flex flex-col">
            <div class="flex w-full truncate whitespace-nowrap justify-start items-center space-x-2 mt-0 p-2">
                <span class="mt-0">
                    <span class="inline-flex flex-shrink-0 items-center bg-sky-100 text-sky-500 rounded-lg pl-2 pr-2 pt-2 pb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="h-5 w-5">
                            <path d="M8 5a1 1 0 100 2h5.586l-1.293 1.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L13.586 5H8zM12 15a1 1 0 100-2H6.414l1.293-1.293a1 1 0 10-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L6.414 15H12z"></path>
                        </svg>
                    </span>
                </span>
                <div class="w-full max-w-none text-left truncate whitespace-nowrap mt-0">
                    <div class="flex truncate whitespace-nowrap mt-0 text-left text-gray-500 text-sm font-normal dark:text-white">
                        <span class="flex justify-center items-center w-6 text-center text-inherit text-sm font-bold">@Model.Route.RouteNumber</span>
                        <div class="h-auto mx-2 bg-gray-300 w-0.5 rounded-full"></div>
                        <div class="flex flex-col">
                            <span class="text-inherit text-sm font-semibold">@Model.Route.Name</span>
                            <p class="shrink-0 mt-0 text-left text-gray-500 text-sm font-normal dark:text-white">DKK @Model.Route.Price</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="p-6 pt-4 ring-1 mt-0 max-w-sm bg-white shadow border-blue-400 ring-gray-200 pl-6 pr-6 pt-6 pb-6 rounded-lg dark:bg-gray-900">
            <ol class="relative border-l border-gray-200 dark:border-gray-700">
                <li class="mb-10 ml-4">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-white">08:00 - @Model.Route.Location1</time>
                </li>
                <li class="mb-10 ml-4">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-white">12:10 - @Model.Route.Location2</time>
                </li>
                <li class="mb-10 ml-4">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-white">16:20 - @Model.Route.Location1</time>
                </li>
                <li class="mb-10 ml-4">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-white">20:30 - @Model.Route.Location2</time>
                </li>
                <li class="ml-4">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                    <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-white">00:40 - @Model.Route.Location1</time>
                </li>
            </ol>
        </div>
        <a asp-controller="Home" asp-action="Index"
            type="button"
            class="text-center text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 
                    focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 
                    mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none 
                    dark:focus:ring-blue-800 uppercase ml-auto w-full mt-auto">
            Go Home
        </a>
    </div>
    <div class="aspect-w-16 aspect-h-9 w-full">
        <div id='map' class="w-full h-full rounded-md"></div>
    </div>

@model NewsItem

@{
    Layout = null;
}

<div class="news-item relative mt-0 bg-@Model.Type-50 border-@Model.Type-600 pl-3 pr-3 pt-3 pb-3 text-sm rounded-md border-l-4 cursor-pointer">
    <div class="overflow-hidden ml-1.5">
        <div class="flex  items-start justify-between items-center text-@Model.Type-700">
            <h4 class="font-semibold">@Model.Title</h4>
            <i class="fa-solid fa-chevron-up rotate-180 transition-all duration-200 ease-in-out"></i>
        </div>
        <div id="news-item-toggle" class="hidden">
            <div class="overflow-y-auto text-@Model.Type-700 mt-2">@Model.Message</div>
            @if (Model.Message2 != null)
            {
                <div class="w-full mx-auto bg-@Model.Type-600 h-0.5 mt-6 mb-6 rounded-full"></div>
                <div class="overflow-y-auto text-@Model.Type-700 mt-2">
                    @Model.Message2
                </div>
            }
        </div>
    </div>
</div>